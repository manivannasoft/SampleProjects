<h3>{{viewTitle}}</h3>
<form action="/employee" method="POST" autocomplete="off">
    <div class="form-group">
        <label>Employee Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" required>
    </div>
     <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" required>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" required>
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" required>
        </div>
    </div>
    <div class="form-group">
        <label>Salary</label>
        <input type="text" class="form-control" name="salary" placeholder="Salary" required>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
    </div>
    <div class="form-row">
        <div class="form-group">
            <button type="getEmployee" onclick="location.href = 'http://localhost:3000/employee/employee';" class="btn btn-info"><i class="fa fa-user-circle "></i> Get Employee</button>
        </div>
        <div class="form-group" style="margin-left: 20px">
            <button type="getSalary" onclick="location.href = 'http://localhost:3000/employee/salary';" class="btn btn-info"><i class="fa fa-database"></i> Get Salary</button>
        </div>
        <div class="form-group" style="margin-left: 20px">
            <button type="getEmpSalary" onclick="location.href = 'http://localhost:3000/employee/list';" class="btn btn-info"><i class="fa fa-user-circle "></i> GetEmployee and Salary</button>
        </div>
    </div>
</form>